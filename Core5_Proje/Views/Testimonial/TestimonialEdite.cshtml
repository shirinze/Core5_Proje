@model EntityLayer.Concreate.Testimonial
@{
    ViewData["Title"] = "TestimonialEdite";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("TestimonialEdite", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Testimonial</h4>

                <form class="forms-sample">
                    <input type="hidden" name="TestimonialID" value="@Model.TestimonialID" />
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="ClientName" value="@Model.ClientName">
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" name="Title" value="@Model.Title">
                    </div>
                    <div class="form-group">
                        <label>Company</label>
                        <input type="text" class="form-control" name="Company" value="@Model.Company">
                    </div> 
                    <div class="form-group">
                        <label>Image url</label>
                        <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" name="Comment" value="@Model.Comment" rows="6">@Model.Comment</textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-primary mr-2">Submit</button>
                    <button class="btn btn-outline-danger">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}

