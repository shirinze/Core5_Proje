@model List<EntityLayer.Concreate.Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card bg-default shadow">
            <div class="card-header bg-transparent border-0">
                <h3 class="text-white mb-0">Services</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-dark table-flush">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Title</th>
                            <th scope="col" class="sort" data-sort="status"></th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    @item.ServiceID
                                </th>
                                <td class="budget">
                                    @item.Title
                                </td>
                                <td><a asp-controller="Service" asp-action="DeleteService" asp-route-id="@item.ServiceID" class="btn btn-outline-danger">delete</a></td>
                                <td><a asp-controller="Service" asp-action="UpdateService" asp-route-id="@item.ServiceID" class="btn btn-outline-warning">update</a></td>

                            </tr>
                        }
                       

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<br />
<a asp-controller="Service" asp-action="AddService" class="btn btn-outline-primary">new service</a>