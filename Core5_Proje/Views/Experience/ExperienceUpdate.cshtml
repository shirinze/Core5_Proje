@model EntityLayer.Concreate.Experience
@{
    ViewData["Title"] = "ExperienceUpdate";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("ExperienceUpdate","Experience",FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Update Experience</h4>

                <form class="forms-sample">
                    <input type="hidden" name="ExperienceID" value="@Model.ExperienceID" />
                    <div class="form-group">
                        <label>Title</label>
                        <input type="text" class="form-control" name="Name" value="@Model.Name">
                    </div>
                    <div class="form-group">
                        <label>Date</label>
                        <input type="text" class="form-control" name="Date" value="@Model.Date">
                    </div>
                    <div class="form-group">
                        <label>Image</label>
                        <input type="text" class="form-control" name="ImageUrl" value="@Model.ImageUrl">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" name="Description" value="@Model.Description" rows="6">@Model.Description</textarea>
                    </div>
                    <button type="submit" class="btn btn-outline-primary mr-2">Submit</button>
                    <button class="btn btn-outline-danger">Cancel</button>
                </form>
            </div>
        </div>
    </div>
}