@model List<EntityLayer.Concreate.Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Skill Table</h4>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Value</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.SkilID</td>
                                <td>@item.Title</td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-success" role="progressbar" style="width:@item.Value%" aria-valuenow="@item.Value%" aria-valuemin="0" aria-valuemax="100">@item.Value%</div>
                                    </div>
                                </td>
                                <td><a asp-controller="Skill" asp-action="SkillDelete" asp-route-id="@item.SkilID" class="btn btn-outline-danger">Delete</a></td>
                                <td><a asp-controller="Skill" asp-action="SkillUpdate" asp-route-id="@item.SkilID" class="btn btn-outline-danger">Update</a></td>
                                
                            </tr>
                        }
                 
                    </tbody>
                </table>
                <br />
                <a href="/Skill/SkillAdd" class="btn btn-outline-primary">New Skill</a>
            </div>
        </div>
    </div>
</div>
