@model List<EntityLayer.Concreate.Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@{
    string color = "";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Announcement Table</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if(item.Status=="new")
                            {
                                color = "badge badge-danger";
                            }
                            if(item.Status=="workshop")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Status == "conferance")
                            {
                                color = "badge badge-success";
                            }
                            <tr>
                                <th>@item.ID</th>
                                <td>@item.Title</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><label class="@color">@item.Status</label></td>
                                <td><a href="/Writer/Default/AnnouncementDetail/@item.ID" class="btn btn-outline-primary">details</a></td>
                            </tr>
                        }
                      

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

