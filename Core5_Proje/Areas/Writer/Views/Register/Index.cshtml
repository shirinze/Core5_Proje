@model Core5_Proje.Areas.Writer.Models.UserRegisterViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Skydash Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/skydash/images/logo.svg" alt="logo">
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                            <form class="pt-3" method="post">
                                <div class="form-group">
                                    <label>name</label>
                                    <span asp-validation-for="Vname" class="text-danger"></span>
                                    <input type="text" asp-for="Vname" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>surename</label>
                                    <span asp-validation-for="Vsurename" class="text-danger"></span>
                                    <input type="text" asp-for="Vsurename" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>image url</label>
                                    <span asp-validation-for="Vimageurl" class="text-danger"></span>
                                    <input type="text" asp-for="Vimageurl" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>password</label>
                                    <span asp-validation-for="VPassword" class="text-danger"></span>
                                    <input type="text" asp-for="VPassword" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>confirm pass</label>
                                    <span asp-validation-for="VConfirmPassword" class="text-danger"></span>
                                    <input type="text" asp-for="VConfirmPassword" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>user name</label>
                                    <span asp-validation-for="VUserName" class="text-danger"></span>
                                    <input type="text" asp-for="VUserName" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>email</label>
                                    <span asp-validation-for="VMail" class="text-danger"></span>
                                    <input type="text" asp-for="VMail" class="form-control" />
                                </div>
                                <div class="text-danger" asp-validation-summary="ModelOnly">

                                </div>
                                <div class="mt-3">
                                   @* <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" >SIGN UP</a>*@
                                  <button class="btn btn-primary">Sing In</button>
                                </div>
                                @*<div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a href="login.html" class="text-primary">Login</a>
                                </div>*@
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/skydash/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/skydash/js/off-canvas.js"></script>
    <script src="~/skydash/js/hoverable-collapse.js"></script>
    <script src="~/skydash/js/template.js"></script>
    <script src="~/skydash/js/settings.js"></script>
    <script src="~/skydash/js/todolist.js"></script>
    <!-- endinject -->
</body>

</html>